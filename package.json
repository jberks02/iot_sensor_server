{
  "name": "typescript-server-boilerplate",
  "version": "1.0.0",
  "description": "Boiler plate repository to quickly start new projects using a typescript backend.",
  "main": "index.ts",
  "scripts": {
    "test": "jest --collectiveCoverage",
    "build-watch": "tsc -w",
    "run-watch": "nodemon --watch .env --watch target -r dotenv/config target/index.js",
    "dev": "run-p build-watch run-watch",
    "clean": "rimraf target",
    "build": "tsc",
    "postbuild": "copyfiles -E package.json package-lock.json target"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jberks02/typescript-react-server-boilerplate.git"
  },
  "keywords": [
    "boiler",
    "plate"
  ],
  "author": "Justin Berkshire",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jberks02/typescript-react-server-boilerplate/issues"
  },
  "homepage": "https://github.com/jberks02/typescript-react-server-boilerplate#readme",
  "dependencies": {
    "concurrently": "^7.0.0",
    "dotenv": "^16.0.0",
    "fastify": "^4.24.3",
    "node-fetch": "^3.2.1",
    "npm-run-all": "^4.1.5",
    "promised-sqlite3": "^2.1.0",
    "reselect": "^4.1.5",
    "rimraf": "^3.0.2",
    "safe-float-math": "^1.1.8",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/express": "^4.17.13",
    "@types/html-escaper": "^3.0.0",
    "@types/jest": "^27.4.1",
    "@types/mssql": "^7.1.5",
    "@types/node": "^20.8.7",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.7.0",
    "eslint": "^8.10.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.15",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "resetMocks": true
  },
  "nodemon": {
    "delay": "3000"
  }
}
